{
  "name": "Robomanager",
  "version": "1.2.7",
  "manifest_version": 2,
  "description": "Addon for import taobao information",
  "author": "Alexey Moshkin",
  "icons": {
    "16": "images/icon.png",
    "128": "images/icon.png"
  },
  "default_locale": "ru",
  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/vendor/jquery-3.2.1.min.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "robomanager@alibaba24.ru"
    }
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon.png",
      "38": "images/icon.png"
    },
    "default_title": "brobo"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ap.yarlan.ru/*"
      ],
      "js": [
        "scripts/vendor/jquery-3.2.1.min.js",
        "scripts/yarlan.js"
      ],
      "css": [ "style.css" ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://buyertrade.taobao.com/trade/itemlist/*"
      ],
      "js": [
        "scripts/vendor/jquery-3.2.1.min.js",
        "scripts/buyertrade.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://work.1688.com/home/buyer*"
      ],
      "js": [
        "scripts/vendor/jquery-3.2.1.min.js",
        "scripts/1688.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "scripts/yarlan.js",
    "scripts/buyertrade.js",
    "scripts/1688.js"
  ],
  "permissions": [
    "cookies",
    "tabs",
    "notifications",
    "contextMenus",
    "*://*.taobao.com/*",
    "*://*.1688.com/*",
    "*://*.ap.yarlan.ru/*"
  ]
}
